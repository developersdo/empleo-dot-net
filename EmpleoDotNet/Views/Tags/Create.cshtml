@model EmpleoDotNet.Models.Tag

@{
    ViewBag.Title = "Create";
}

<h2>Crear nuevo tag</h2>


@using (Html.BeginForm("Create", "Tags", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />

    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div> 
}

<div>
    @Html.ActionLink("Ver Lista", "Index",null,new {@class="btn btn-sm btn-info"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
